{
  "manifest_version": 2,
  "name": "Hotel Popup",
  "description": "__MSG_appDesc__",
  "version": "1.0.0.0",
  "default_locale": "en",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Hotel Popup",
    "default_popup": "popup/index.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://localhost:*/"],
    "all_frames": true,
    "run_at" : "document_end",
    "css": ["styles/content-scripts.css"],
    "js": ["scripts/content-scripts.js"]
  }],
  "content_security_policy":"script-src 'self'; object-src 'self'"
}
